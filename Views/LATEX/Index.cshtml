@using System.Linq

@{
    ViewData["Title"] = "Convert image to LaTeX";

    var fonts = ViewBag.Fonts as List<string> ?? new List<string> { "Courier New", "Consolas", "Monospace" };
    string selectedBackground = ViewBag.Background ?? "#FFFFFF";
    string selectedFont = ViewBag.Font ?? fonts.FirstOrDefault() ?? "Courier New";
    string characters = string.IsNullOrEmpty(ViewBag.Characters) ? "MNHUCIi:." : ViewBag.Characters;
    int scale = ViewBag.Scale ?? 8;
    bool invert = ViewBag.Invert == true;
    bool createFullDocument = ViewBag.CreateFullDocument == null || ViewBag.CreateFullDocument == true;
    bool useBackgroundColor = ViewBag.UseBackgroundColor ?? false;
}

<h2 class="mb-4">Convert Image to TEX</h2>

<form method="post" enctype="multipart/form-data" asp-controller="LATEX" asp-action="Index" class="row g-3">
    <div class="col-md-6">
        <label for="image" class="form-label">Select Image:</label>
        <input type="file" id="image" name="image" accept="image/*" class="form-control" required />
    </div>

    <div class="col-md-6">
        <label for="characters" class="form-label">Characters:</label>
        <input type="text" id="characters" name="characters" value="@characters" class="form-control" />
        <div class="form-text">Characters used for conversion</div>
    </div>

    <div class="col-md-4">
        <label for="scale" class="form-label">Scale (e.g., 8):</label>
        <input type="number" id="scale" name="scale" min="1" value="@scale" class="form-control" />
    </div>

    <div class="col-md-4">
        <label class="form-label d-block">Options:</label>
        <div class="form-check">
            <input type="checkbox" id="invert" name="invert" class="form-check-input" value="true" @(invert ? "checked" : "") />
            <label for="invert" class="form-check-label">Invert colors</label>
        </div>
        <div class="form-check">
            <input type="checkbox" id="createFullDocument" name="createFullDocument" class="form-check-input" value="true" @(createFullDocument ? "checked" : "") />
            <label for="createFullDocument" class="form-check-label">Generate full document code</label>
        </div>
    </div>

    <div class="col-md-4">
        <label for="background" class="form-label">
            Background Color: (<span id="colorValueDisplay" style="font-weight: normal;"></span>)
        </label>
        <input type="color" id="background" name="background" value="@selectedBackground" class="form-control form-control-color" title="Choose background color" @(useBackgroundColor ? "" : "disabled") />

        <div class="form-check mt-2">
            <input type="checkbox" id="useBackgroundColor" name="useBackgroundColor" class="form-check-input" value="true" @(useBackgroundColor ? "checked" : "") />
            <label for="useBackgroundColor" class="form-check-label">Use Custom Color</label>
        </div>
    </div>

    <div class="col-md-6">
        <label for="font" class="form-label">Font:</label>
        <select id="font" name="font" class="form-select">
            @foreach (var font in fonts)
            {
                <option style="font-family: @font;" value="@font" selected="@(font == selectedFont ? "selected" : null)">@font</option>
            }
        </select>
    </div>

    <div class="col-md-6 d-flex align-items-end justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">Convert</button>
        <button type="button" class="btn btn-outline-secondary" onclick="copyToClipboard()">Copy</button>
        @if (ViewBag.Result != null)
        {
            <button type="button" class="btn btn-success mt-3" onclick="openResultInNewTab()">
                Open Result in New Tab
            </button>
        }
    </div>
</form>

<h3 class="mt-5">Generated HTML Art:</h3>

<div id="result" class="rounded p-3 bg-body text-body w-100 border border-primary" style="min-height: 100px;">
    @if (ViewBag.Result != null)
    {
        @Html.Raw(ViewBag.Result)
    }
</div>
