@{
    ViewData["Title"] = "Convert image to HTML";
}

<h2>Convert Image to HTML</h2>

<form method="post" enctype="multipart/form-data" asp-controller="HTML" asp-action="Index">
    <div>
        <label>Select Image:</label>
        <input type="file" id="image" name="image" accept="image/*" />
    </div>
    <div>
        <label>Characters:</label>
        <input type="text" id="characters" name="characters" value="@(ViewBag.Characters ?? " %#*+=-:. ")" />
    </div>
    <div>
        <label>Scale (e.g., 8):</label>
        <input type="number" id="scale" name="scale" min="1" max="50" value="@(ViewBag.Scale ?? 8)" />
    </div>
    <div>
        <label>Invert:</label>
        <input type="checkbox" id="invert" name="invert" @(ViewBag.Invert == true ? "checked" : "") />
    </div>
    <button type="submit">Convert</button>
    <button type="button" onclick="copy()">Copy</button>
</form>

<h3>Generated HTML Art:</h3>
<div id="result" style="background: black; color: white; padding: 1em; overflow-x: auto; white-space: pre-wrap;">
    @if (ViewBag.Result != null)
    {
        @Html.Raw(ViewBag.Result)
    }
</div>
